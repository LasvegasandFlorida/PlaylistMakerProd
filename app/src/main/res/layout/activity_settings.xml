<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white_back">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/standard"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/back_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:outlineAmbientShadowColor="@color/white_back"
            android:outlineSpotShadowColor="@color/white_back"
            app:iconTint="@color/YP_black"
            app:iconGravity="top"
            app:icon = "@drawable/arrow_back"
            android:backgroundTint="@color/white_back"
            android:layout_gravity="start"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_menu"
            android:textSize="@dimen/text"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/YP_black"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:layout_marginStart="28dp"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/standard"
        android:paddingEnd="@dimen/standard"
        android:paddingTop="61dp"
        android:paddingBottom="42dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_night"
            android:textSize="@dimen/text_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/YP_black"
            android:layout_gravity="start"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:thumbTint="@color/YP_Text_Gray"
            android:trackTint="@color/YP_Light_Gray"

            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/standard"
        android:paddingEnd="@dimen/standard"
        android:paddingBottom="42dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_share"
            android:textSize="@dimen/text_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/YP_black"
            android:layout_gravity="start"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconTint="@color/YP_black"
            android:src="@drawable/share_vector"
            android:layout_gravity="end"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/standard"
        android:paddingEnd="@dimen/standard"
        android:paddingBottom="42dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_help"
            android:textSize="@dimen/text_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/YP_black"
            android:layout_gravity="start"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconTint="@color/YP_black"
            android:src="@drawable/support_vector"
            android:layout_gravity="end"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/standard"
        android:paddingEnd="@dimen/standard"
        android:paddingBottom="42dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_agreement"
            android:textSize="@dimen/text_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/YP_black"
            android:layout_gravity="start"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconTint="@color/YP_black"
            android:src="@drawable/arrow_fwrd_vector"
            android:layout_gravity="end"
            />
    </FrameLayout>
</LinearLayout>