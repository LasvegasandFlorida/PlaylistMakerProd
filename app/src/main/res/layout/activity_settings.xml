<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/standard_padding"
        android:paddingStart="20dp"
        android:orientation="horizontal"
        tools:ignore="RtlSymmetry,UseCompoundDrawables">
        <ImageView
            style="@style/SettingsSwitch"
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:layout_marginTop="8dp"/>
        <TextView
            style="@style/SettingsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_menu"
            android:textSize="@dimen/text"
            android:textAppearance="@font/ys_display_medium"
            android:layout_marginStart="28dp"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="61dp">
        <TextView
            style="@style/SettingsMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@font/ys_display_medium"
            android:textSize="@dimen/text_small"
            android:text="@string/settings_night"/>
        <Switch
            android:id="@+id/theme_switch"
            style="@style/SettingsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:ignore="UseSwitchCompatOrMaterialXml"/>
    </FrameLayout>
        <Button
            android:id="@+id/share_button"
            style="@style/SettingsMenu"
            app:icon="@drawable/share_vector"
            android:text="@string/settings_share"/>
        <Button
            android:id="@+id/support_button"
            style="@style/SettingsMenu"
            app:icon="@drawable/support_vector"
            android:text="@string/settings_help"/>
        <Button
            android:id="@+id/agreement_button"
            style="@style/SettingsMenu"
            app:icon="@drawable/arrow_fwrd_vector"
            android:text="@string/settings_agreement"/>
</LinearLayout>