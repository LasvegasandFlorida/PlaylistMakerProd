<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/standard_padding"
        android:paddingBottom="@dimen/standard_padding"
        android:paddingStart="20dp"
        android:orientation="horizontal"
        tools:ignore="RtlSymmetry,UseCompoundDrawables">
        <ImageView
            style="@style/SettingsSwitch"
            android:id="@+id/search_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/arrow_back"
            tools:ignore="ContentDescription" />
        <TextView
            style="@style/SettingsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_header"
            android:textSize="@dimen/text"
            android:textAppearance="@font/ys_display_medium"
            android:layout_marginStart="28dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/standard_padding"
        android:orientation="horizontal"
        tools:ignore="RtlSymmetry,UseCompoundDrawables">
        <EditText
            style="@style/SearchEditText"
            android:id="@+id/search_edit_text"
            android:background="@drawable/search_edit_text"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/standard_padding"
            android:layout_marginEnd="@dimen/standard_padding"
            android:paddingEnd="@dimen/standard_padding"
            android:hint="@string/search_header"
            android:textSize="@dimen/text_small"
            android:inputType="text"
            android:drawableStart="@drawable/search_icon"
            android:drawablePadding="@dimen/standard_padding"
            android:paddingHorizontal="@dimen/standard_padding"
            android:textCursorDrawable="@drawable/search_cursor"
            tools:ignore="Autofill" />
        <ImageView
            android:id="@+id/clearIcon"
            style="@style/ClearIcon"
            android:layout_marginEnd="34dp"
            android:layout_marginStart="-50dp"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/clear_button"
            tools:ignore="ContentDescription"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/placeholderIcon"
        android:layout_marginTop="102dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/placeholderText"
        style="@style/SettingsSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:textSize="19sp"
        android:visibility="gone"
        android:textAlignment="center"
        android:fontFamily="@font/ys_display_medium"
        android:layout_gravity="center"/>
    <ProgressBar android:id="@+id/progressBar"
    android:layout_width="44dp"
        android:layout_marginTop="140dp"
    android:layout_height="44dp"
    android:layout_gravity="center"
    android:indeterminateTint="@color/mainBlue"
    android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <Button
        style="@style/UpdateButton"
        android:id="@+id/update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/vector_ratio"
        android:visibility="gone"
        android:text="@string/update"
        android:layout_gravity="center"/>
</LinearLayout>