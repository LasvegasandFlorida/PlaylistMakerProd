<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/songView"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:paddingTop="@dimen/small_padding"
    android:paddingBottom="@dimen/small_padding"
    android:paddingStart="@dimen/small_horisontal_padding"
    android:paddingEnd="@dimen/small_horisontal_padding">
        <ImageView
            android:id="@+id/songImage"
            android:layout_height="@dimen/song_image_preview_ratio"
            android:layout_marginEnd="@dimen/small_padding"
            android:layout_width="@dimen/song_image_preview_ratio"
            android:layout_weight="1"
            android:layout_gravity="start"/>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/SettingsSwitch"
                android:id="@+id/songName"
                android:maxLines="1"
                tools:text = "aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:textSize="@dimen/text_small"
                android:fontFamily="@font/ys_display_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/SearchRecyclerSmallText"
                    android:id="@+id/songAuthor"
                    android:textSize="@dimen/text_ultra_small"
                    android:fontFamily="@font/ys_display_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    style="@style/SearchRecyclerSmallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot"/>
                <TextView
                    style="@style/SearchRecyclerSmallText"
                    android:id="@+id/songLength"
                    android:textSize="@dimen/text_ultra_small"
                    android:fontFamily="@font/ys_display_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    <ImageView
        android:layout_width="@dimen/vector_ratio"
        android:layout_height="@dimen/vector_ratio"
        android:scaleType="center"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:src="@drawable/arrow_fwrd_vector" />
    </LinearLayout>