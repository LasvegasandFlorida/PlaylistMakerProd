<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="MainButtonStyle" >

        <item name="android:textAppearance">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="cornerRadius">@dimen/standard_padding</item>
        <item name="iconTint">@color/YP_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
    </style>
    <style name="SettingsMenu" >
        <item name="android:textAppearance">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:paddingStart">@dimen/standard_padding</item>
        <item name="android:paddingEnd">@dimen/standard_padding</item>
        <item name="android:gravity">start</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/settings_bottom_padding</item>

        <item name="iconGravity">end</item>
    </style>
</resources>